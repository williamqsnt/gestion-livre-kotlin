<?xml version="1.0" encoding="utf-8"?>
<!-- activity_detail.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Bouton de retour -->
    <Button
        android:id="@+id/retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <!-- Titre du livre -->
    <TextView
        android:id="@+id/detailTitreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_below="@id/retour"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/auteurLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auteur :"
        android:textSize="18sp"
        android:layout_below="@id/detailTitreTextView"
        android:layout_marginTop="24dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/detailAuteurTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/detailTitreTextView"
        android:layout_toEndOf="@id/auteurLabelTextView"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/detailPhotoImageView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@id/detailAuteurTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/descriptionLabelTextView"
        android:text="Description :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/detailPhotoImageView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/detailDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/descriptionLabelTextView"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</RelativeLayout>
